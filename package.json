{
  "name": "windows-sound-controller",
  "version": "1.1.0",
  "description": "Windows Sound Controller - Switch between different audio device configurations",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrew-fennell/windows-sound-controller.git"
  },
  "scripts": {
    "dev": "vite",
    "build:react": "tsc && vite build",
    "start": "npm run build:react && electron .",
    "build": "electron-builder",
    "build:win": "npm run build:react && electron-builder --win --x64",
    "dist": "npm run build:react && electron-builder --win --x64 --publish never"
  },
  "keywords": [
    "audio",
    "sound",
    "windows",
    "profile",
    "audio-device",
    "sound-profile"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  },
  "build": {
    "appId": "com.soundprofilemanager.app",
    "productName": "Windows Sound Controller",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main.js",
      "src/preload.js",
      "src/updateChecker.js",
      "dist-react/**/*",
      "scripts/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Windows Sound Controller"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
