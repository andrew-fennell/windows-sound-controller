{
  "name": "windows-sound-controller",
  "version": "1.0.0",
  "description": "Windows Sound Controller - Switch between different audio device configurations",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/andrew-fennell/windows-sound-controller.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64 --publish never"
  },
  "keywords": ["audio", "sound", "windows", "profile", "audio-device", "sound-profile"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.soundprofilemanager.app",
    "productName": "Windows Sound Controller",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "scripts/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Windows Sound Controller"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  }
}
